  	<record id="partner_netcom" model="ir.ui.view">
	    <field name="name">partner.netcom</field>
	    <field name="model">res.partner</field>
	    <field name="inherit_id" ref="base.view_partner_form"/>
	    <field name="arch" type="xml">
	    <field name="function" position="before">
    		<field name="parent_account_number" readonly="1"/>
    		<field name="contact_name" />
		</field>
<!-- 		<field name="phone" position="before">
    		<field name="contact_name" />
		</field> -->
	    </field>
	</record>
	
	<record id="pipeline_netcom_form" model="ir.ui.view">
	    <field name="name">pipeline.netcom.form</field>
	    <field name="model">crm.lead</field>
	    <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
	    <field name="arch" type="xml">
	    <button name="%(sale_crm.sale_action_quotations_new)d" position="attributes"> <attribute name="groups">netcom.group_sale_account_exec</attribute></button>
    	<xpath expr="//button[@name='action_set_won']" position="before">
       		<button name="assign_engineer" string="Send to Engineers" type="object" attrs="{'invisible': ['|', ('active','=',False), ('probability', '!=', 70)]}" groups="base.group_user"/>
       	</xpath>
<!--        	<xpath expr="//button[@name='action_set_won']" position="before">
       		<button name="assign_engineer" string="Send to Engineers" type="object" attrs="{'invisible': ['|', ('active','=',False), ('probability', '!=', 70)]}" groups="base.group_user"/>
       	</xpath> -->
	    <field name="user_id" position="after">
	    	<field name="acc_executive"/>
    		<field name="nrc"/>
    		<field name="mrc"/>
		</field>
	    </field>
	</record>
	
	<record id="netcom_crm_case_tree_view_oppor" model="ir.ui.view">
	    <field name="name">netcom.crm.lead.tree.opportunity</field>
	    <field name="model">crm.lead</field>
	    <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
	    <field name="arch" type="xml">
	    <field name="planned_revenue" position="before">
    		<field name="nrc"/>
    		<field name="mrc"/>
		</field>
		<field name="name" position="replace">
			<field name="name" string="Services"/>
		</field>
		<field name="country_id" position="replace" />
	    </field>
	</record>

      <record id="netcom_view_move_form" model="ir.ui.view">
            <field name="name">netcom.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="narration" position="after">
                	<div class="oe_chatter">
			             <field name="message_follower_ids" widget="mail_followers"/>
			             <field name="activity_ids" widget="mail_activity"/>
			             <field name="message_ids" widget="mail_thread"/>
			        </div>
                </field>
            </field>
    </record>


	<record id="netcom_product_form_view" model="ir.ui.view">
        <field name="name">netcom.product.form</field>
        <field name="model">product.template</field>
        <field name="priority" eval="7" />
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="brand"/>
                <field name="equipment_type"/>
                <field name="desc"/>
            </field>
            <field name="list_price" position="after">
                <field name="lease_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
            </field>
        </field>
    </record>
    
    <record id="netcom_hr_form_view" model="ir.ui.view">
        <field name="name">netcom.hr.form</field>
        <field name="model">hr.employee</field>
        <field name="priority" eval="7" />
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="job_id" position="after">
                <field name="pfa_id"/>
                <field name="pf_id"/>
            </field>
            <field name="passport_id" position="after">
                <field name="expiry_date"/>
                <field name="renewal_date"/>
                <field name="probation_period"/>
                <field name="serpac"/>
            </field>
        </field>
    </record>
    
      <record id="netcom_hr_expense_ref" model="ir.ui.view">
